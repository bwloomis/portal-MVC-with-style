@model Assmnts.Models.GeneralForm
@{
    Layout = "LA_StubAppLayout.cshtml";
}

@section AddtoHead{
    <link rel="stylesheet" type="text/css" href="/Content/adap/css/ADAPForms.css" />
    <script src="~/Content/js/ADAPLookupSelects.js"></script>

    <script>
        $(document).ready(function () {
            @foreach (string identifier in new string[] { "LA_ADAP_AppType", "ADAP_D8_CurrGenderDrop" })
            {
                @:populateLookupSelect('@identifier', '@identifier', '@Model.rspValues[identifier]');
            }

            @*Set the placeholder text for all dropdowns*@
            $('option[value=""]').html("Choose One");

            @*override default width of fileupload control*@
            $('#div_LA_ADAP_Attachment').removeClass('col-md-5').addClass('col-md-6');

            $('.ssn_input').mask("999-99-9999").click(function () {
                $(this).select();
            });
        });
    </script>
}


<div class="panel panel-default" id="demographic-name">
    <div class="panel-body" style="background-color:#f8f8f8">
        <div class="form-group">            
            @Helpers.LabelSpan(Model, "ADAP_D1_FirstName_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-3">                
                @Helpers.TextInput(Model, "ADAP_D1_FirstName", new { @class = "form-control" })
            </div>
            @Helpers.LabelSpan(Model, "ADAP_D1_LastName_item", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-3">                
                @Helpers.TextInput(Model, "ADAP_D1_LastName", new { @class = "form-control" })
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Helpers.LabelSpan(Model, "ADAP_D2_DOB_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-3">
                <div class="input-group date">
                    @Helpers.TextInput(Model, "ADAP_D2_DOB", new  {@class = "form-control", placeholder = "mm/dd/yyyy" })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
            @Helpers.LabelSpan(Model, "ADAP_D8_CurrGenderDrop_item", new { @class = "col-sm-2 control-label" })
            <div class="col-md-3">                
                @Helpers.DropDownList(Model, "ADAP_D8_CurrGenderDrop_item", "ADAP_D8_CurrGenderDrop")
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Helpers.LabelSpan(Model, "ADAP_D9_Ramsell_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-2">
                @Helpers.TextInput(Model, "ADAP_D9_Ramsell", new { @class = "form-control" })
            </div>
            @Helpers.LabelSpan(Model, "ADAP_D10_SSN_item", new { @class = "col-sm-1 control-label" })
            <div class="col-sm-2">
                @Helpers.TextInput(Model, "ADAP_D10_SSN", new { @class = "form-control ssn_input" })
            </div>
            <div class="col-sm-3">
                @Helpers.LabelSpan(Model, "LA_ADAP_NoSSN_item", new { @class = "right-buffer-5 control-label" })
                @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_NoSSN", "")
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Helpers.LabelSpan(Model, "ADAP_C1_Zip_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-2">                
                @Helpers.TextInput(Model, "ADAP_C1_Zip", new { @class = "form-control" })
            </div>            
            @Helpers.LabelSpan(Model, "LA_ADAP_CoreEndDt_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-3">
                <div class="input-group date">
                    @Helpers.TextInput(Model, "LA_ADAP_CoreEndDt", new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default" id="demographic-name">
    <div class="panel-body" style="background-color:#f8f8f8">
        <div class="form-group">
            @Helpers.LabelSpan(Model, "LA_ADAP_AppType_item", new { @class = "col-sm-3 control-label" })
            <div class="col-md-3">                
                @Helpers.DropDownList(Model, "LA_ADAP_AppType_item", "LA_ADAP_AppType")
            </div>
            @Helpers.LabelSpan(Model, "LA_ADAP_RecievedDt_item", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-3">
                <div class="input-group date">
                    @Helpers.TextInput(Model, "LA_ADAP_RecievedDt", new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Helpers.LabelSpan(Model, "LA_ADAP_Attachment_item", new { @class = "col-sm-3 control-label" })
            @Helpers.FileUpload(Model, "LA_ADAP_Attachment")
        </div>
    </div>
</div>
<div class="panel panel-default" id="demographic-name">
    <div class="panel-body" style="background-color:#f8f8f8">
        <div class="form-group">
            @Helpers.LabelSpan(Model, "LA_ADAP_NewlyDiagnosedYN_item", new { @class = "col-md-3 control-label required" })
            @Helpers.YesNoRadioButtons(Model, "LA_ADAP_NewlyDiagnosedYN")
            @Helpers.LabelSpan(Model, "LA_ADAP_OutOfMedsYN_item", new { @class = "col-md-4 control-label required" })
            @Helpers.YesNoRadioButtons(Model, "LA_ADAP_OutOfMedsYN")

        </div>
        <div class="form-group">
            @Helpers.LabelSpan(Model, "LA_ADAP_DiagnosisDt_item", new { @class = "col-sm-3 control-label required" })
            <div class="col-sm-3">
                <div class="input-group date">
                    @Helpers.TextInput(Model, "LA_ADAP_DiagnosisDt", new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
        </div>
    </div>
</div>

