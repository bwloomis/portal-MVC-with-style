<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Shared.Application. -->
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.datepick.css" rel="stylesheet" />
    <script src="/Content/js/jquery.plugin.js"></script>
    <script src="~/Content/js/jquery.datepick.js"></script>
    <link rel="stylesheet" type="text/css" href="/Content/DataTables-1.10.7/media/css/jquery.dataTables.css" />
    <script type="text/javascript" src="/Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    @*<link href="~/Content/DataTables-1.10.5/media/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables-1.10.5/media/js/jquery.dataTables.min.js"></script>*@
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script>
    $.ajax({
        type: "GET",
        url: "/Account/IsLoggedIn",
        async: false,
        cache: false,
        success: function (result) {

            if (result == "False") {
                var url = window.location.href;

                var arr = url.split("/");

                var location = arr[0] + "//" + arr[2];

                window.location = location;
            }
        },
        error: function (xhr, status, err) {
            alert("Error loading drop down for " + lookupCode + ".  Status: " + xhr.status + "  Message: " + err);
        }
    });
    </script>
    
    @RenderSection("HeadContent", required: false)
</head>

<body>
    @*<div class="body-content">*@
        <div id="header">
            <div class="container">
                <!-- Static navbar -->
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="~/Content/images/sisLogo.jpg" />
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul id="menu" class="nav navbar-nav">
                            <li id="forms"><a href="~/Templates/Index">Forms</a></li>
                            <li id="lookups"><a href="~/Def3Maint/Index">Lookups</a></li>
                            <li id="accesLogs"><a href="~/AccessLog/Index">Access Log</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#" onclick="window.location = '/Account/LogoutUAS';">Logout</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div><!--/.container-fluid -->

        </div>
        <!-- div header ends here -->
        <!-- content starts here -->
        <div class="container" id="content">
            @RenderBody()
        </div>
    @*</div>*@
</body>
</html>

