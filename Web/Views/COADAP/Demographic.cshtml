                </div>
                <div class="checkbox checkbox-info">
                    @Helpers.LabeledCheckboxInput(Model, "ADAP_D3_Indian")
                </div>
            </div>

            <!-- asian ancestry -->
            <div class="panel panel-default" id="PanelAsianAncestry" style="border:none">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-10 control-label" for="" style="text-align:left">@Model.sctTitles["ADAP_D5"]</label>
                    </div>
                    <div class="form-group YesAsianAncestry" style="margin-left:25px">
                        <div class="col-md-3">
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Indian")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Filipino")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Korean")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Other")
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Chinese")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Japanese")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_Vietnamese")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D5_NA")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- hawaiian/PI ancestry -->
            <div class="panel panel-default" id="PIAncestry" style="border:none">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-10 control-label" for="" style="text-align:left">@Model.sctTitles["ADAP_D6"]</label>
                    </div>
                    <div class="form-group YesPIAncestry" style="margin-left:25px">
                        <div class="col-md-3">
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D6_Native")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D6_Guam")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D6_Samoan")
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D6_Other")
                            </div>
                            <div class="checkbox checkbox-info">
                                @Helpers.LabeledCheckboxInput(Model, "ADAP_D6_NA")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
        //setup certain elements to be visible iff a certain checkbox is checked
            $(document).ready(function () {
                $('#PREVIOUS_PanelAsianAncestry').toggle($('#PREVIOUS_ADAP_D3_Asian').get(0).checked);
                $('#PREVIOUS_PIAncestry').toggle($('#PREVIOUS_ADAP_D3_Native').get(0).checked);
                toggleRace();
                $('#ADAP_D3_Asian').change(toggleRace);
                $('#ADAP_D3_Native').change(toggleRace);
            });

            function toggleRace() {
                $('#PanelAsianAncestry').toggle($('#ADAP_D3_Asian').get(0).checked);
                $('#PIAncestry').toggle($('#ADAP_D3_Native').get(0).checked);
            }
</script>
    </div>
</div>

