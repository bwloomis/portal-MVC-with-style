                    </div>
                    <div class="checkbox checkbox-info">
                        @Helpers.LabeledCheckboxInput(Model, "ADAP_D4_Other")
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {                
                updateHispanic();
                $("#ADAP_D4_EthnicDrop").change(updateHispanic);
            });

            function updateHispanic() {
                $("#PREVIOUS_hispanicToggle").toggle($("#PREVIOUS_ADAP_D4_EthnicDrop").val() == 1);
                $("#hispanicToggle").toggle($("#ADAP_D4_EthnicDrop").val() == 1);
            };
