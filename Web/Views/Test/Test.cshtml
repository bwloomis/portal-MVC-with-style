@model Assmnts.Models.GeneralForm
@using Assmnts
@{
    ViewBag.Title = "Test View";
    Layout = "~/Views/Test/TestLayout.cshtml";
}

@section HeadContent {
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!--    <link rel="stylesheet" type="text/css" href="/Content/css/jquery.datepick.css"> -->
    <link rel="stylesheet" type="text/css" href="/Content/css/jquery.timeentry.css">
    <script src="/Content/js/jquery.plugin.js"></script>
<!--    <script src="/Content/js/jquery.datepick.js"></script> -->
   <script src="/Content/js/jquery.timeentry.min.js"></script>
    <script src="/Content/js/Misc.js"></script>
    <script src="/Content/js/PopulateSelects.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>

    $(document).ready(function () {})

    </script>
}


<form action="/Results/Save" method="post" id="form-id">
    <span>THIS IS A TEST VIEW</span>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                @Helpers.LabelSpan(Model, "test_text_item", new { @class = "col-md-1 control-label" })
                <div class="col-md-3">
                    @Helpers.TextInput(Model, "test_text", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                @Helpers.LabelSpan(Model, "test_yesnoradio_item")
            </div>
            <div class="form-group">
                @Helpers.YesNoRadioButtons(Model, "test_yesnoradio")
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group" style="margin-left:25px">
                <div class="col-md-4">
                    <div class="checkbox checkbox-info">
                        @Helpers.LabeledCheckboxInput(Model, "test_checkbox1")
                    </div>
                    <div class="checkbox checkbox-info">
                        @Helpers.LabeledCheckboxInput(Model, "test_checkbox2")
                    </div>
                    <div class="checkbox checkbox-info">
                        @Helpers.LabeledCheckboxInput(Model, "test_checkbox3")
                    </div>
                    <div class="checkbox checkbox-info">
                        @Helpers.LabeledCheckboxInput(Model, "test_checkbox4")
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group" style="margin-left:25px">
                <div class="col-md-4">
                    @Helpers.RadioList(Model, Html, "test_radiolist_item", "test_radiolist", null, 12 )
                </div>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group" style="margin-left:25px">
                <div class="col-md-4">
                    @Helpers.DropDownList(Model, "test_dropdown_item", "test_dropdown")
                </div>
            </div>
        </div>
    </div>


    <input type="submit" value="Save" id="btnSubmit" />
</form>
