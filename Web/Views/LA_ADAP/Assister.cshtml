@model Assmnts.Models.GeneralForm
@{
    Layout = "LA_AdapAppLayout.cshtml";
}

@section AddtoHead{
    <link rel="stylesheet" type="text/css" href="/Content/adap/css/ADAPForms.css" />
    <script src="~/Content/js/ADAPLookupSelects.js"></script>

    <script>
        $(document).ready(function () {
            //Set the placeholder text for all dropdowns, except the "Jump to Application Section" dropdown
            $('select[name!=jumpSection] option[value=""]').html("Choose One");

            setApplicationProgressIndicator(16);

            //$('.input-group.date').datepicker({
            //    autoclose: true,
            //    format: 'mm/dd/yyyy'
            //});
        });

    </script>
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="panel panel-default" id="">
        <div class="panel-body" style="background-color:#f8f8f8">
            <div class="form-group">
                <div class="col-md-5">
                    <label class="control-label" for="">@Model.sctTitles["LA_ADAP_Assister_Help"]</label>
                    @Helpers.ToolTipFromItemPrompt(Model, "LA_ADAP_Assister_HIVCM_item", new { @class = "pointer fa fa-question-circle text-primary fa-1x col-md-3", @style = "float:right" })
                </div>
                @Helpers.YesNoRadioButtons(Model, "LA_ADAP_Assister_HelpYN")
            </div>
            <div class="toggleAssister">
                <hr>
                <div class="form-group">
                    <div class="col-md-12">
                        @Model.sctTitles["LA_ADAP_Assister_HelpType"]
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-6">
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_HIVCM")
                        <br />
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_NonHIVCM")
                        <br />
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_MedStaff")
                        <br />
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_Friend")
                        <br />
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_Family")
                        <br />
                        @Helpers.LabeledCheckboxInput(Model, "LA_ADAP_Assister_Other")
                    </div>
                </div>
                <div class="form-group" id="toggleother">
                    <div class="col-md-4 col-md-offset-1">
                        @Helpers.TextInput(Model, "LA_ADAP_Assister_OtherAssistType", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                updateAssister();
                $("#LA_ADAP_Assister_HelpYN_YesOption").change(updateAssister);
                $("#LA_ADAP_Assister_HelpYN_NoOption").change(updateAssister);
            });
            function updateAssister() {
                console.log('Hello');
                $(".toggleAssister").toggle($("#LA_ADAP_Assister_HelpYN_YesOption").get(0).checked);
            };
        </script>

        <script>
            $(document).ready(function () {
                $('#LA_ADAP_Assister_Other').change(function () {
                    var $this = $(this);
                    if ($this.is(':checked')) {
                        $('#toggleother').show();
                    } else {
                        $('#toggleother').hide();
                    }
                }).change();
            });
        </script>
    </div>

</body>
</html>
