<script>
    $(document).ready(function () {
        @*postdata = {
            "sIden":"@Model.nextScreenTitle"
        }*@

        $('#dtItemVariables').dataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                url: "/Templates/DataTableItemVariables",
                //data: postdata,
                type: "POST"
            },
            "ordering": false,
