@model Assmnts.Models.TemplateItemVariables
@{
    ViewBag.Title = "Item Variables";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section HeadContent {

	@*<link rel="stylesheet" type="text/css" href="/Content/css/sitewide.css" />*@
	
