@model Assmnts.Models.TemplateForms
@{
    ViewBag.Title = "Forms List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section HeadContent {
 
    <script>
        $(document).ready(function () {
            @*postdata = {
                "sIden":"@Model.nextScreenTitle"
            }*@

            $('#dtForms').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    url: "/Templates/DataTableForms",
                    //data: postdata,
                    type: "POST"
                },
                "ordering": false,
                "dom": 'lriptip'
            });
        });
    </script>
}
 

<div class="body-content">
    <h2>Forms</h2>

    <div class="col-sm-2">
        <input type="button" class="btn btn-success" value="Add New Form" style="width:100%" onclick="window.location='../Templates/FormEdit'" />
    </div>
    <br /> <br />
    <table id="dtForms" class="table table-bordered table-striped datatable" cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>No.</th>
                <th>Form Id</th>
                <th>Identifier</th>
                <th>Title</th>
                <th>Edit</th>
                <th>View</th>
            </tr>
        </thead>
    </table>
    <!-- End of Forms List -->
    Message:<div id="msg"></div><br />

</div>