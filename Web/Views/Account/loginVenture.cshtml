@{
    ViewBag.Title = "Interview and Profile";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    Validator.Required("The field is required.");
    string sisOnlineURL = System.Configuration.ConfigurationManager.AppSettings["SISOnlineURL"];
}

@section HeadContent {

    <link rel="stylesheet" type="text/css" href="/Content/css/sitewide.css">
    <link rel="alternate stylesheet" type="text/css" media="screen" title="medium" href="/Content/css/sitewide2.css">
    <link rel="alternate stylesheet" type="text/css" media="screen" title="large" href="/Content/css/sitewide3.css">
    <script src="/Content/js/textchanger.js" type="text/javascript"></script>
    <script src="/Scripts/spin.min.js" type="text/javascript"></script>

    <style>
        .textfield {
            height: 15px;
            width: 150px;
            border: 1px solid #7b7d7b;
        }

        /*change top and left below to effect the way the
         right-side elements overlap with the logo*/
        .offset {
            position: relative;
            left: 80px;
            top: 30px;
        }

        #logo {
            width: 665px;
            height: auto;
        }

        #logoTd{
            position: relative;
        }

        .logoText{
            position: absolute;
            top: 125px;
            left: 150px;
            width: 75%;
        }

        #sisAsisCLogos {
            font-size: 10px;
            position: relative;
            top: 60px;
        }

        .box {
            display: inline-block;
        }

        #sisALogo {
            width: 200px;
        }

        #sisCLogo {
            width: 200px;
        }

        #text {
            position: relative;
            top: 100px;
            width: 450px;
        }

        .heading {
            height: 40px;
        }

        #forgotPassword, #forgotUsername {
            font-size: 13px;
        }
    </style>



}

