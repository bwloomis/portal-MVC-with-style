            $(document).ready(function () {
                updateC4();
                $("#C1_LegalContactMayMessage").change(updateC4);
                $("#C1_LegalContactMayMessage").change(updateC4);
            });

            function updateC4() {
                $(".toggleC4").toggle($("#C1_LegalContactMayMessage").get(0).checked);
