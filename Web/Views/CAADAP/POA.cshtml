            <div class="col-md-4">
                @Helpers.DropDownList(Model, "C1_LegalContactType", "C1_LegalContactType", true)
            </div>

            @Helpers.LabelSpan(Model, "C1_LegalContactDuration_item", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Helpers.DropDownList(Model, "C1_LegalContactDuration", "C1_LegalContactDuration", true)
            </div>
        </div>
